<h1><%= Post.name %>
	<div class="float-right">
		<%- pie.Helper.Html.link('[edit]', { 'action': 'edit', 'id' : Post.id }) %>
		<%- pie.Helper.Html.link('[delete]', { 'action': 'remove', 'id' : Post.id }) %>
	</div>
</h1>

<div class="clear-both"></div>

<% if (typeof Post.User.id !== 'undefined') { %>
	<p><%- pie.Helper.Html.link(pie.Helper.Sanitize.paranoid(Post.User.name), { 'controller' : 'users', 'action' : 'view', 'id' : Post.User.id }) %> - <%- pie.Helper.Html.link(Post.User.email, 'mailto:' + Post.User.email) %></p>
<% } %>

<p><%= Post.content %></p>

<%- pie.Helper.ShowCode.standard() %>